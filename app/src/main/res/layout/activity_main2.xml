<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgnd1"
    tools:context="com.codeasylums.myself.Main2Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:id="@+id/aboutView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#bb8d8d"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projects"
        android:id="@+id/projectsView"
        android:layout_below="@+id/aboutView"
        android:layout_toEndOf="@+id/aboutView"
        android:layout_marginTop="67dp"
        android:background="#bb8d8d"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expertise"
        android:id="@+id/expertiseView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="#bb8d8d"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:id="@+id/goalView"
        android:layout_above="@+id/momentsView"
        android:layout_alignStart="@+id/projectsView"
        android:layout_marginBottom="39dp"
        android:background="#bb8d8d"
        android:textColor="#ffffff"
        android:typeface="serif"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moments"
        android:id="@+id/momentsView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#bb8d8d"
        android:textColor="#ffffff"
        android:typeface="serif"/>
</RelativeLayout>
